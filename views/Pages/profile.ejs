<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('../elements/head') %>
  <link rel="stylesheet" href="/stylesheets/profile-tinder.css">
</head>
<body>
  <div class="profile-container">
    <img src="/images/logo.png" alt="logo" class="logo">
    <div class="tinder-main">
      <h1>Swipe Right</h1>
      <button id="login-btn" class="login-btn">Log in</button>
      <button id="create-account-btn" class="create-account-btn">Create account</button>
        <!-- Thêm các thành viên khác nếu muốn -->
      </div>
    </div>
  </div>
  <!-- Modal login/signup -->
  <div class="modal-overlay" id="login-modal">
    <div class="modal">
      <button class="close-btn" id="login-close">&times;</button>
      <h2>Welcome</h2>
      <form id="login-form">
        <input type="email" id="login-email" placeholder="Email" required>
        <input type="password" id="login-password" placeholder="Password" required>
        <button type="submit" class="btn">Login</button>
      </form>
      <div class="register-link">
        Don't have an account? <a href="#" id="switch-to-register">Sign up</a>
      </div>
    </div>
  </div>
  <div class="modal-overlay" id="register-modal">
    <div class="modal">
      <button class="close-btn" id="register-close">&times;</button>
      <h2>Sign Up</h2>
      <form id="register-form">
        <input type="text" id="fullname" placeholder="Full Name" required>
        <input type="email" id="register-email" placeholder="Email" required>
        <input type="password" id="register-password" placeholder="Password" required>
        <button type="submit" class="btn">Sign Up</button>
      </form>
      <div class="login-link">
        Already have an account? <a href="#" id="switch-to-login">Login</a>
      </div>
    </div>
  </div>
  <script type="module" src="/javascripts/profile.js"></script>
</body>
</html>