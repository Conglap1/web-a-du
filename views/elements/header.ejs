<!-- login -->
<ul class="login">
  <div class="left">
    <li><a href="/" id="logo"><img src="/images/logo.png" alt="logo"></a></li>
  </div>
  <div class="right">
    <li><a href="#" id="register-button">Đăng Ký</a></li>
    <li><a href="#" id="login-button">Đăng Nhập</a></li>
  </div>
</ul>


<!-- nav + search -->
<%- include('nav') %>

<div class="modal-overlay" id="register-modal">
  <div class="modal">
    <button class="close-btn" id="register-close">&times;</button>
    <h2>Đăng Ký</h2>
    <form>
      <div class="form-group">
        <label for="fullname">Họ và tên</label>
        <input type="text" id="fullname" name="fullname" placeholder="Nhập họ và tên của bạn" required>
      </div>
      <div class="form-group">
        <label for="register-email">Email</label>
        <input type="email" id="register-email" name="email" placeholder="Nhập email của bạn" required>
      </div>
      <div class="form-group">
        <label for="register-password">Mật khẩu</label>
        <input type="password" id="register-password" name="password" placeholder="Tạo mật khẩu" required>
      </div>
      <div class="form-group">
        <label for="confirm-password">Xác nhận mật khẩu</label>
        <input type="password" id="confirm-password" name="confirm-password" placeholder="Nhập lại mật khẩu" required>
      </div>
      <div class="terms">
        <input type="checkbox" id="agree-terms" required>
        <label for="agree-terms">Tôi đồng ý với <a href="#">Điều khoản dịch vụ</a> và <a href="#">Chính sách
            bảo mật</a></label>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Đăng Ký</button>
      </div>
      <div class="login-link">
        Đã có tài khoản? <a href="#" id="switch-to-login">Đăng nhập ngay</a>
      </div>
    </form>
  </div>
</div>

<!-- Login Modal -->
<div class="modal-overlay" id="login-modal">
  <div class="modal">
    <button class="close-btn" id="login-close">&times;</button>
    <h2>Đăng Nhập</h2>
    <form>
      <div class="form-group">
        <label for="login-email">Email</label>
        <input type="email" id="login-email" name="email" placeholder="Nhập email của bạn" required>
      </div>
      <div class="form-group">
        <label for="login-password">Mật khẩu</label>
        <input type="password" id="login-password" name="password" placeholder="Nhập mật khẩu của bạn" required>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        <a href="#" class="forgot-password">Quên mật khẩu?</a>
      </div>
      <div class="register-link">
        Chưa có tài khoản? <a href="#" id="switch-to-register">Đăng ký ngay</a>
      </div>
    </form>
  </div>
</div>